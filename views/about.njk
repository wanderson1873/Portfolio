{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - Wanderson</title>
{% endblock head %}

{% block content %}

    <div id="wrapper">
        <img src="{{ about.avatar_url }}" alt="imagem de {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>

    <footer>
        <div class="link">
            {% for item in about.links %}
                <a href="{{ item.url }}" target="_blanck">{{ item.name }}</a>
            {% endfor %}
        </div>
    </footer>

{% endblock content %}